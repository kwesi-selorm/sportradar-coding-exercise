{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "rootDir": "src",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".idea", "built"]
}
